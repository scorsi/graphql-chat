{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "ts": "yarn build"
  },
  "events": {
    "restart": "osascript -e 'display notification \"Server restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "src/**"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts"
}